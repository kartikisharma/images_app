<p id="notice"><%= notice %></p>

<h1>Assets</h1>

<%= form_tag destroy_multiple_assets_path, method: :delete, data: { confirm: 'Are you sure?' } do %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <!-- TODO display thumbnail, a small thumbnail -->
        <td><%= check_box_tag "delete[]", asset.id, false, class: 'selectable' %></td>
        <td><%= asset.image.filename %></td>
        <td><%= link_to 'Show', asset %></td>
        <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
        <td><%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= submit_tag "Delete selected" %>
<% end %>
<br>

<%= link_to 'New Asset', new_asset_path %>
